{% set validItems = pageService.getValidBlockItems( block ) %}
{% set validContentInfoItems = pageService.getValidBlockItemsAsContentInfo( block ) %}
{% if validItems|length > 0 %}
<table width="100%" border="0" bgcolor="#f7f7f7" align="left" cellspacing="0" cellpadding="0">
    <tbody>
    <tr bgcolor="white" border="0">
        <td bgcolor="white" border="0">
            <h2 style="margin:0">
                <img width="160" height="19" border="0" style="display:block" alt="En Bref..." src="http://{{ app.request.host }}{{ asset('bundles/cgnewsletter/images/bref_header.png') }}">
            </h2>
        </td>
    </tr>
    <tr bgcolor="white" border="0">
        <td bgcolor="white" border="0">
            <img width="160" height="8" border="0" style="display:block" alt="" src="http://{{ app.request.host }}{{ asset('bundles/cgnewsletter/images/spacer.png') }}">
        </td>
    </tr>
    <tr>
        <td>
            <img width="160" height="1" border="0" style="display:block" alt="" src="http://{{ app.request.host }}{{ asset('bundles/cgnewsletter/images/spacer.png') }}">
        </td>
    </tr>
    {% for ContentInfoItem in validContentInfoItems %}
        {% set content = eznova_content_by_contentinfo( ContentInfoItem ) %}
        {% set contentInfo = content.versionInfo.contentInfo %}
        <tr>
            <td valign="top" cellspacing="5" cellpadding="5">
                <table border="0" cellspacing="0" cellpadding="0">
                    <tbody>
                    <tr>
                        <td valign="top">
                            <h4 style="padding:0 20px 0 0;margin:0">
                                <font size="3" face="Arial, Helvetica, sans-serif" style="font-family:Arial,Helvetica,sans-serif;color:#76522b;font-size:16px;font-weight:bold">
                                    <a target="_blank" style="color:#76522b" href="{{ path( "ez_urlalias", {"locationId": contentInfo.mainLocationId} ) }}">
                                        {{ ez_field_value(content,'title') }}
                                    </a>
                                </font>
                            </h4>
                        </td>
                    </tr>
                    <tr>
                        <td valign="top">
                            <p style="padding:0 15px 0 0;margin:8px 0 0 0">
                                <font face="Arial, Helvetica, sans-serif" color="#000000" style="font-family:Arial,Helvetica,sans-serif;color:#000000;font-size:12px;line-height:160%">
                                    {{ ez_render_field(content, 'introduction',{ 'container':true }) }}
                                </font>
                            </p>
                            <p style="padding:0 15px 0 0;margin:16px 0 0 0">
                                <font size="1" face="Arial, Helvetica, sans-serif" color="#76522b" style="font-family:Arial,Helvetica,sans-serif;color:#76522b;font-size:10px;text-transform:uppercase">
                                    <a target="_blank" style="color:#76522b;text-decoration:underline" href="{{ path( "ez_urlalias", {"locationId": contentInfo.mainLocationId} ) }}">+ Lire la suite</a>
                                </font>
                            </p>
                        </td>
                    </tr>
                    <tr>
                        <td>
                            <img width="160" height="10" border="0" style="display:block" alt="" src="http://{{ app.request.host }}{{ asset('bundles/cgnewsletter/images/spacer.png') }}">
                        </td>
                    </tr>
                    </tbody>
                </table>
            </td>
        </tr>
        <tr>
            <td>
                <img width="160" height="1" border="0" style="display:block" alt="" src="http://{{ app.request.host }}{{ asset('bundles/cgnewsletter/images/spacer.png') }}">
            </td>
        </tr>
        {% endfor %}
        </tbody>
</table>
{% endif %}
