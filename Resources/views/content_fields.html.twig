{% block ezimage_field %}
    {% spaceless %}
        {% if field.value %}
            {% set imageAlias = ez_image_alias( field, versionInfo, parameters.alias|default( 'original' ) ) %}
            <img src="http://{{ parameters.host }}{{ asset( imageAlias.uri ) }}" alt="{{ field.value.alternativeText }}" />
        {% endif %}
    {% endspaceless %}
{% endblock %}